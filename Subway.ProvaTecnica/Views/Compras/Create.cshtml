@model Subway.ProvaTecnica.Models.Compra

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastrar nova compra</h2>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContaId" class="control-label"></label>
                <select asp-for="ContaId" class ="form-control" asp-items="ViewBag.ContaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Produtos" class="control-label"></label>
                <input asp-for="Produtos" class="form-control" />
                <span asp-validation-for="Produtos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
